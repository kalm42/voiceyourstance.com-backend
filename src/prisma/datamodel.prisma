type Letter {
  id: ID! @id
  fromAddress: Address! @relation(link: INLINE)
  toAddress: Address! @relation(link: INLINE)
  content: Json!
  payment: Payment @relation(link: INLINE)
  mail: Mail @relation(link: INLINE)
  user: User @elation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Payment {
  id: ID! @id
  stripeId: String!
  letter: Letter!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Mail {
  id: ID! @id
  lobId: String!
  letter: Letter!
  expectedDeliveryDate: DateTime!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  resetToken: String
  resetExpiry: Float
  letters: [Letter!]!
  templates: [Template!]!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Address {
  id: ID! @id
  hash: String! @unique
  name: String!
  line1: String!
  line2: String
  city: String!
  state: String!
  zip: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Template {
  id: ID! @id
  title: String!
  tags: [String!]!
  content: Json!
  user: User! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}